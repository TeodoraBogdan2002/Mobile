<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:launchMode="singleTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#74AE8F"
                android:orientation="vertical" tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="369dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="#B5ECDB">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/font2bold"
                android:paddingTop="5dp"
                android:text="@string/additionalInfoText"
                android:textColor="@color/black"
                android:textSize="32sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="366dp"
            android:layout_height="507dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"

                android:layout_width="match_parent"
                android:layout_height="508dp"
                android:background="@color/LightGreen2"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/addNoteButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:contentDescription="@string/addButton"
            app:srcCompat="@drawable/add"/>

    </LinearLayout>

</RelativeLayout>