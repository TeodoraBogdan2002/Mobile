<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/LighterGreen"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:contentDescription="@string/logoDesc"
        android:paddingLeft="30dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/logo" android:paddingEnd="0dp" android:paddingStart="30dp"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:background="@drawable/button_backgroung"
        android:fontFamily="@font/font3regular"
        android:text="@string/openJournal"
        android:textAllCaps="false"
        android:textSize="29sp"
        android:textStyle="italic|bold" />
</RelativeLayout>